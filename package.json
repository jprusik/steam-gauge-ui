{
  "name": "steam-gauge-ui",
  "version": "0.1.0",
  "description": "Steam Gauge allows you to get a customizable summary of your Steam account, including game values, install sizes, and play time.",
  "keywords": [
    "Steam",
    "Steam profile",
    "Steam calculator",
    "steam stats",
    "Steam games",
    "steam account",
    "steam tables",
    "steam profile size",
    "steam account value",
    "steam play time",
    "steam friends",
    "steam friends games in common"
  ],
  "homepage": "https://mysteamgauge.com",
  "bugs": "mailto:jon@mysteamgauge.com",
  "author": {
    "name": "Jonathan Prusik",
    "email": "jprusik@classynemesis.com",
    "url": "https://jonathanprusik.com"
  },
  "repository": {
    "type": "git"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "private": true,
  "proxy": "http://localhost:5000",
  "scripts": {
    "build:watch": "nodemon -x 'npm run build'",
    "build": "rimraf build && . .env && react-scripts build",
    "lint": "prettier --check . && npm run typecheck",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "serve-build": "http-server ./build",
    "start": ". .env && react-scripts start",
    "test": ". .env && react-scripts test",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.1",
    "@mui/material": "^5.14.1",
    "dayjs": "^1.11.7",
    "i18next": "^23.2.11",
    "i18next-browser-languagedetector": "^7.1.0",
    "js-cookie": "^3.0.5",
    "react": "^18.2.0",
    "react-csv": "^2.2.2",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.0.2",
    "react-router-dom": "^5.3.4",
    "react-scripts": "^5.0.1",
    "react-table": "^7.8.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@emotion/core": "^10.3.1",
    "@emotion/react": "^11.11.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.12",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-table": "^7.7.14",
    "eslint": "^8.32.0",
    "http-server": "^14.1.1",
    "husky": "9.0.11",
    "lint-staged": "15.2.5",
    "nodemon": "3.1.1",
    "prettier": "3.3.3",
    "rimraf": "5.0.7",
    "sass": "^1.64.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "*": "prettier --cache --write --ignore-unknown"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "**/build/**",
      "**/node_modules/**"
    ],
    "watch": [
      "public",
      "src"
    ],
    "verbose": true,
    "ext": "js,jsx,json,ts,tsx,scss,png,svg,jpg,gif,ico,html"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
